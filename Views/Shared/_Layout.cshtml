<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Production House</title>
    <link rel="shortcut icon" href="uploads/images/logo/logo.jpg" type="image/x-icon">

    <!-- bootstrap core css -->
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.css" />

    <!--owl slider stylesheet -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" />

    <!-- fonts style -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700|Poppins:400,600,700&display=swap" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/css/style.css" rel="stylesheet" />
    <!-- responsive style -->
    <link href="~/css/responsive.css" rel="stylesheet" />
</head>
<body>
    <div id="app">
        <header-nav-component :page="page"></header-nav-component>
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <script src="~/js/jquery-3.6.0.min.js"></script>
    <script src="~/js/jquery-ui.min.js"></script>
    <script src="~/js/jquery.jcrop.min.js"></script>
    <script src="~/js/jquery.main.js"></script>
    <script src="~/js/jquery.ui.touch-punch.min.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <!-- owl slider -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js">
    </script>
    <script src="~/js/custom.js"></script>
    <script src="~/js/vue.js"></script>
    <script src="~/js/app-component.js"></script>
    <script src="~/js/app-url.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        $(document).ready(function () {
            Vue.component('header-nav-component', function (resolve, reject) {
                $.get(htmlPublicUrl.headernav).then(function (res) {
                    resolve({
                        template: res, props:['page'],
                    })
                })
            })
        })
        function goToAdmin() {
            window.location = "/#admin/dashboard";
        }
        function goToHome() {
            window.location = "/#index";

        }
        function goToPartners() {
            window.location = "/#partners";
        }
        function goToAboutUs() {
            window.location = "/#about";
        }
        function goToServices() {
            window.location = "/#services";

        }
        function goToContactUs() {
            window.location = "/#contact";

        }
        function goToBooking () {
            window.location = "/#booking";
        }
        
    </script>
</body>
</html>
