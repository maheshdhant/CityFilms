<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Production House</title>
    @* <link rel="shortcut icon" href="uploads/images/logo/logo.jpg" type="image/x-icon"> *@

    <!-- bootstrap core css -->
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.css" />

    <!--owl slider stylesheet -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" />
    <link href="~/css/custom.css" rel="stylesheet" />
    <!-- fonts style -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700|Poppins:400,600,700&display=swap" rel="stylesheet" />
    
    <!-- Custom styles for this template -->
    <link href="~/css/style.css" rel="stylesheet" />
    <!-- responsive style -->
    <link href="~/css/responsive.css" rel="stylesheet" />
</head>
<body>
    <div id="app">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <script src="~/js/jquery-3.6.0.min.js"></script>
    <script src="~/js/jquery-ui.min.js"></script>
    <script src="~/js/jquery.jcrop.min.js"></script>
    <script src="~/js/jquery.main.js"></script>
    <script src="~/js/jquery.ui.touch-punch.min.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <!-- owl slider -->
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/custom.js"></script>
    <script src="~/js/vue.js"></script>
    <script src="~/js/app-url.js"></script>

    <script src="~/js/app-component.js"></script>
    <script src="~/js/nav-bar.js"></script>
    <script src="~/js/vue-toastification/index.js"></script>
    <link href="~/js/vue-toastification//index.css" rel="stylesheet">
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        $(document).ready(function () {
            const options = {
                duration: 2000,
                dismissible: true,
                position: "top-right"
            }

            Vue.use(VueToast, options);
        })
    </script>
</body>
</html>
